<h1>My Article</h1>

<p>
   <strong>Title:</strong>
   <%= @article.title %>
</p>

<p>
   <strong>Text:</strong>
   <%= @article.text %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %>

<br>
<br>
<br>

<h1>Comments</h1>

<% @article.comments.each do |comment| %>
<p>
   <strong>Commenter:</strong>
   <%= comment.commenter %>
</p>
<p>
   <strong>Text:</strong>
   <%= comment.body %>
</p>
<hr />
<% end %>


<%= form_for @article.comments.new do |f| %>
   <%= f.hidden_field :article_id %>
   <p>
      <%= f.label :commenter %>
      <%= f.text_field :commenter %>
   </p>
   <p>
      <%= f.label :body %>  <br>
      <%= f.text_area :body %>
   </p>
   <p>
      <%= f.submit %>
   </p>
<% end %>

<br>
<br>

<%= link_to 'Back', articles_path %>
