<p>
   <strong>Commenter:</strong>
   <%= comment.user.email %>
</p>
<p>
   <strong>Text:</strong>
   <%= simple_format(comment.body) %>
</p>
<p>
   <strong>Date:</strong>
   <%= comment.created_at %>
</p>
<p>
  <strong>Rates amount:</strong>
  <%= comment.opinions.count %>
</p>
<p>
  <strong>Rating of comment:</strong>
  <%= comment.rating_sum %>
</p>

<% if comment.user == current_user || current_user&.admin? %>
   <%= link_to 'Edit', edit_article_comment_path(article_id: comment.article.id, id: comment.id) %>
   <%= link_to 'Destroy', article_comment_path(article_id: comment.article.id, id: comment.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


  <%= form_for [@article, comment, @opinion], url: article_comment_opinions_path(@article, comment, @opinion) do |f| %>

    <%= f.label :opinion %>
    <%= f.collection_radio_buttons :opinion, [[1, 'Plus'], [-1, 'Minus']], :first, :last %>
    <%= f.submit %>
  <% end %>



