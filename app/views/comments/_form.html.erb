<%= render 'common/errors', model: @comment %>


<%= form_for [@article, @comment] do |f| %>
   <!-- <%= f.hidden_field :article_id %> jeśli mamy przypisanie komantarza do artykułu możemy pozbyć się odwołania do article_id-->
   <p>
      <%= f.label :commenter %>
      <%= f.text_field :commenter %>
   </p>
   <p>
      <%= f.label :body %>  <br>
      <%= f.text_area :body %>
   </p>
   <p>
      <%= f.submit %>
   </p>
<% end %>
