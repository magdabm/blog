<%= render 'common/errors', model: @comment %>

<%= form_for [@article, @comment], url: article_comments_path(@article, @comment) do |f| %>

   <div class="form-group">
      <%= f.label :body %>  <br>
      <%= f.text_area :body, class: 'form-control' %>
   </div>
   <div class="form-group">
      <%= f.submit class: 'btn btn-dark' %>
   </div>
<% end %>
